/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],

    "paths": {
      "@app/*": ["./src/app/*"],
      "@auth/*": ["./src/app/shared/auth/*"],
      "@common/*": ["./src/app/common/*"],
      "@lib/*": ["./src/app/shared/lib/*"],
      "@models/*": ["./src/app/shared/models/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@directives/*": ["./src/app/shared/directives/*"]
    }

  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],

}
